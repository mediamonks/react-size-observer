{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2017"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "pretty": true,
    "rootDir": "./src/",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "./src/**/*",
    "./types/**/*.d.ts"
  ]
}
